@model WebApplication1.Models.Evento

@{
    ViewBag.Title = "Editar Evento";
}

<h2>Editar Evento</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Local)
        @Html.TextBoxFor(m => m.Local, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Local)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Data)
        @Html.TextBoxFor(m => m.Data, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.Data)
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    @Html.ActionLink("Voltar", "Listar", null, new { @class = "btn btn-secondary" })
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
